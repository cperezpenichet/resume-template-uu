@misc{perez-penichet_dynamics_2011,
	type = {Poster presentation},
	title = {Dynamics of E. coli suspensions through a microfluidic funnel},
	pdflink1 = {http://www.complexperiments.net/carlos/files/poster.psom.pdf},
	abstract = {We have forced a fluid suspension of E. coli through a funnel-like constriction made
on an otherwise straight microfluidic channel. In the case of very active bacteria, sym-
metry is broken: the bacterial concentration gets higher immediately after passing the
funnel. The effect increases with increased input flow, and eventually reaches a maxi-
mum. Symmetry is not violated, however, in the case of dead or poorly active bacteria.
The phenomena can be explained qualitatively in terms of hydrodynamic interactions
of bacteria with the imposed flow and with other bacteria. Our observations suggests
a simple way to concentrate very active bacteria in microfluidic channels.},
	language = {English},
	author = {Pérez-Penichet, Carlos and {Lenin del Río} and {Gastón Miño} and {A. Rousselet} and {A. Lidner} and {Eric Clément} and {Ernesto Altshuler}},
	year = {2011}
},

@article{carlos_perez-penichet_human_2012,
	title = {Human mobility analysis by collaborative radio landscape observation},
	issn = {978-90-816960-0-5},
	pdflink1 = {http://www.complexperiments.net/carlos/files/AGILE12.pdf},
	abstract = {A new method to analyze the spatio-temporal activities of humans based on the symbolic information that can be extracted from a set
of observations of mobile networks taken through smart phones is presented. Specifically, {GSM} and {WiFi} network observations collected
by several users are gathered to collaboratively build a symbolic base map of the logical structure of the geography. At the same time a
map of the mobility of each individual is also created from the same set of observations. The Proxmity Map is then used to provide some
spatial context to the Individual Mobility Maps. This information is intended to be used for the analysis of transportation efficiency.},
	language = {English},
	urldate = {2013-03-02},
	journal = {Proceedings of the {AGILE'2012} International Conference on Geographic Information Science},
	author = {{Carlos Pérez-Penichet} and {Angelo Conde} and {Adriano Moreira}},
	month = apr,
	year = {2012},
	pages = {153--158},
	file = {Pérez-Penichet et al_Human mobility analysis by collaborative radio landscape observation.pdf:/home/carlos/.mozilla/firefox/kahidn8e.default/zotero/storage/EZEXSEDD/Pérez-Penichet et al_Human mobility analysis by collaborative radio landscape observation.pdf:application/pdf}
},

